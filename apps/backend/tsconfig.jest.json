{
    "compilerOptions": {
        "module": "commonjs", 
        "target": "es6", 
        "strict": true, 
        "esModuleInterop": true, 
        "skipLibCheck": true, 
        "forceConsistentCasingInFileNames": true, 
        "baseUrl": ".", 
        "paths": {
            "@src/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ] 
}